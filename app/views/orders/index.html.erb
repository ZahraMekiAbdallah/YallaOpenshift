<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Orders</h1>

<table class="table table-striped" >
  <thead>
    <tr>
      <th>#</th>
      <th>Order for</th>
      <th>Status</th>
      <th>Resturant</th>
      <th>Invited</th>
      <th>Joined</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="">
        <td><%= order.id        %></td>
        <td><%= order.order_for %></td>
        <td><%= order.status    %></td>
        <td><%= order.resturant %></td>
        <td><%= order.order_members.count%></td>
        <td><%= order.order_members.count(:joined)%></td>
        <td>
        <%= link_to 'view', order %>
        <% if order.status != 'Finished' and order.status != 'Cancelled'%>
          <a href="/orders/<%= order.id %>/finish">Finish</a>
          <a href="/orders/<%= order.id %>/cancel">Cancel</a></td>
        <%  end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- <div class="glyphicon glyphicon-plus-sign"> -->
<a class="glyphicon glyphicon-plus-sign"> </a>
<%= link_to 'New Order', new_order_path %>
<!-- </div> -->
</div>
